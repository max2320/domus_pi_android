<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroller"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome:      "
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtNomeAgendamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lblLigarDesligar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equip.:      "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblEquipamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.04"
                android:maxLines="2"
                android:text="Definir..." />

            <Button
                android:id="@+id/btnEquipamento"
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/btn_blue"
                android:text="Definir" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ligar:        "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblDataHoraInicial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.04"
                android:text="Data e Hora" />

            <Button
                android:id="@+id/btnDataHoraInicial"
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/btn_blue"
                android:text="Definir" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desligar:  "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblDataHoraFinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="9.05"
                android:text="Data e Hora" />

            <Button
                android:id="@+id/btnDataHoraFinal"
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/btn_blue"
                android:text="Definir" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Repetir:"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ToggleButton
                android:id="@+id/btnDom"
                style="@style/ButtonText"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:background="@drawable/togglebutton"
                android:text="ToggleButton"
                android:textOff="D"
                android:textOn="D" />

            <ToggleButton
                android:id="@+id/btnSeg"
                style="@style/ButtonText"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:background="@drawable/togglebutton"
                android:text="ToggleButton"
                android:textOff="S"
                android:textOn="S" />

            <ToggleButton
                android:id="@+id/btnTer"
                style="@style/ButtonText"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:background="@drawable/togglebutton"
                android:text="ToggleButton"
                android:textOff="T"
                android:textOn="T" />

            <ToggleButton
                android:id="@+id/btnQua"
                style="@style/ButtonText"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:background="@drawable/togglebutton"
                android:text="ToggleButton"
                android:textOff="Q"
                android:textOn="Q" />

            <ToggleButton
                android:id="@+id/btnQui"
                style="@style/ButtonText"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:background="@drawable/togglebutton"
                android:text="ToggleButton"
                android:textOff="Q"
                android:textOn="Q" />

            <ToggleButton
                android:id="@+id/btnSex"
                style="@style/ButtonText"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:background="@drawable/togglebutton"
                android:text="ToggleButton"
                android:textOff="S"
                android:textOn="S" />

            <ToggleButton
                android:id="@+id/btnSab"
                style="@style/ButtonText"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:background="@drawable/togglebutton"
                android:text="ToggleButton"
                android:textOff="S"
                android:textOn="S" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.34"
            android:gravity="bottom" >

            <Button
                android:id="@+id/btnAdicionar"
                style="@style/ButtonText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_blue"
                android:text="Salvar " />
        </LinearLayout>
    </LinearLayout>

</ScrollView>